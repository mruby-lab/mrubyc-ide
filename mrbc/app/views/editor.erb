<html>
<title>mrubyコンパイラ</title>
<head>
  <meta charset="UTF-8">
</head>
<body>
  <h1>mruby コンパイラ</h1>
  <form action="/compile" method="POST">
    <div>
      ファイル名:<br><input id="name" type="text" name="name" value="">
    </div>
    <br>
    <div>
      mrubyプログラム:<br>
      <textarea id="program" name="program"></textarea>
    </div>
    <br>
    <div>
      <select name="version">
	      <% for v in @versions do %>
	      <% if v=="3.2.0" then %>
	        <option value="<%= v %>" selected>mrbc <%= v %></option>
	      <% else %>
	        <option value="<%= v %>">mrbc <%= v %></option>
	      <% end %>
	      <% end %>
      </select>
    </div>
    <div>
      <input type="submit" value="コンパイル&ダウンロード">
    </div>
  </form>
</body>
</html>
